{
  "compilerOptions": {
      "target": "es5",
      "sourceMap": true,
      "outDir": "./build",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "declaration": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "commonjs",
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}