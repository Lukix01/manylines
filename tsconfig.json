{
  "compilerOptions": {
      "target": "es5",
      "sourceMap": true,
      "outDir": "./build",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "declaration": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}